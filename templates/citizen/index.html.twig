{% extends 'base.html.twig' %}

{% block title %}Citizen index{% endblock %}

{% block body %}
    <h1>Citizen index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for citizen in citizens %}
            <tr>
                <td>{{ citizen.id }}</td>
                <td>{{ citizen.lastname }}</td>
                <td>{{ citizen.firstname }}</td>
                <td>{{ citizen.email }}</td>
                <td>{{ citizen.password }}</td>
                <td>{{ citizen.roles ? citizen.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_citizen_show', {'id': citizen.id}) }}">show</a>
                    <a href="{{ path('app_citizen_edit', {'id': citizen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_citizen_new') }}">Create new</a>
{% endblock %}
